{
  "useTaobaoRegistry": false,
  "packageManager": "yarn",
  "useConfigFiles": true,
  "plugins": {
    "@vue/cli-plugin-babel": {},
    "@vue/cli-plugin-pwa": {},
    "@vue/cli-plugin-eslint": {
      "config": "standard",
      "lintOn": ["save", "commit"]
    },
    "@vue/cli-plugin-unit-jest": {},
    "vue-cli-plugin-pug": {}
  },
  "router": true,
  "routerHistoryMode": false,
  "vuex": true,
  "cssPreprocessor": "node-sass",
  "configs": {
    "vue": {
      "css": {
        "loaderOptions": {
          "sass": {
            "data": 
              `@import "@/scss/_variables.scss";
              @import "@/scss/_mixins.scss";`
          }
        }
      }
    }
  }
}
